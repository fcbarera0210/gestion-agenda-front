---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Página no encontrada" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Página no encontrada</title>
    <script is:inline>
      const theme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      document.documentElement.classList.toggle(
        'dark',
        theme === 'dark' || (!theme && prefersDark)
      );
    </script>
  </head>
  <body class="relative min-h-screen">
    <div class="min-h-screen flex items-center justify-center">
      <div class="w-full bg-card max-w-md rounded-2xl shadow-lg overflow-hidden m-4">
        <div class="p-8 text-center flex flex-col items-center gap-12">
          <svg
            class="mx-auto h-40 w-40 text-muted-foreground"
            viewBox="0 0 200 200"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <!-- Calendar frame -->
            <rect
              x="20"
              y="40"
              width="160"
              height="140"
              rx="10"
              stroke="currentColor"
              stroke-width="8"
            />
            <!-- Calendar top bar -->
            <rect
              x="20"
              y="20"
              width="160"
              height="40"
              rx="8"
              fill="currentColor"
              fill-opacity="0.2"
            />
            <!-- Rings -->
            <line
              x1="60"
              y1="20"
              x2="60"
              y2="4"
              stroke="currentColor"
              stroke-width="8"
              stroke-linecap="round"
            />
            <line
              x1="140"
              y1="20"
              x2="140"
              y2="4"
              stroke="currentColor"
              stroke-width="8"
              stroke-linecap="round"
            />
            <!-- Torn bottom -->
            <path
              d="M20 180l20-10 20 10 20-10 20 10 20-10 20 10 20-10v20H20z"
              fill="currentColor"
              fill-opacity="0.2"
            />
            <!-- 404 text -->
            <text
              x="100"
              y="130"
              text-anchor="middle"
              font-size="80"
              font-weight="700"
              fill="currentColor"
            >404</text>
          </svg>
          <h1 class="text-9xl md:text-[12rem] font-bold tracking-wide mb-6">404</h1>
          <p class="text-xl leading-relaxed tracking-wide text-muted-foreground">La página que buscas no existe.</p>
          <a
            href="/"
            class="mt-8 px-6 py-3 bg-primary text-primary-foreground rounded"
            >Volver al inicio</a
          >
          <ThemeToggle />
        </div>
      </div>
    </div>
    <script src="/js/view-transitions.js" defer></script>
  </body>
</html>
